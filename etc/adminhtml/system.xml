<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="telemage" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Telemage Integration</label>
            <tab>service</tab>
            <resource>Novikor_Telemage::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enable/Disable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="bot_id" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Telegram Bot Identifier</label>
                    <validate>required-entry alphanumeric</validate>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>Please provide your Telegram Bot ID (e.g., my_awesome_bot)</comment>
                </field>
                <field id="jwe_secret" translate="label" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>JWE secret</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>
            <group id="api" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>API Settings</label>
                <field id="base_url" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Telemage Base URL</label>
                    <validate>required-entry url</validate>
                    <depends>
                        <field id="telemage/general/enabled">1</field>
                    </depends>
                    <comment>Please specify the Telemage service Base URL</comment>
                </field>
                <field id="integration_url_token" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Telemage Integration URL Token</label>
                    <validate>required-entry alphanumeric</validate>
                    <depends>
                        <field id="telemage/general/enabled">1</field>
                    </depends>
                    <comment>You can find it on an Integration page, "Webhook URL Token" field</comment>
                </field>
            </group>
        </section>
    </system>
</config>
